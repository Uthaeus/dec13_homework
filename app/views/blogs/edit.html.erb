<div class="new-blog">
  <div class="row">
    <div class="col-sm-6">
      <div class="text-left">
        <h2>New Blog</h2>
      </div>
      <div class="form marg">
        <%= render 'form', blag: @blog %>
      </div>
      <div class="marg">
        <%= link_to 'Show', @blog, class: 'btn btn-sm' %> |
        <%= link_to 'Back', blogs_path, class: 'btn btn-sm' %> |
        <%= link_to 'Delete', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm' %>
      </div>
    </div>
  </div>
</div>